<%- include('partials/header'); -%>

<main role="blog-main" class="blog-container page-top">
<div class="row">


<!--------- main ---------->

<div class="col-md-10 pagetop">
  <div class="blog-post">

  <%  posts.forEach(function(post){ %>
  <h2 class="blog-title"><%=post.title%></h2>
  <p><%=post.date%> by Stella </p>
  <p><%=post.categoryName%></p>
  <p class="blog-content">
    <%=post.content%>
  </p>
  <%  }) %>
  </div>
</div>


